{
  "name": "chirimen-api-server-for-raspberry-pi",
  "version": "0.0.1",
  "description": "this is chirimen api server for raspberry pi",
  "main": "src/index.ts",
  "scripts": {
    "bundle:api": "clear && rm -rf open-api-ts && rm -rf open-api-php && swagger-cli bundle -o ./open-api-yaml-build/open-api.build.yaml -t yaml ./open-api/open-api.yml",
    "build:open-api:ts": "openapi-generator-cli -- generate -g typescript-angular -i ./open-api-yaml-build/open-api.build.yaml -o ./open-api-ts",
    "build:open-api:ts:one-file": "openapi-generator-cli -- generate -g typescript-angular -i ./one-file-config/petstore.yml -o ./open-api-ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gurezo/chirimen-api-server-for-raspberry-pi.git"
  },
  "keywords": [
    "chirimen"
  ],
  "author": "lifewood",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gurezo/chirimen-api-server-for-raspberry-pi/issues"
  },
  "homepage": "https://github.com/gurezo/chirimen-api-server-for-raspberry-pi#readme",
  "devDependencies": {
    "express": "^4.17.3",
    "node-web-gpio": "^1.0.14",
    "node-web-i2c": "^1.1.20",
    "openapi-generator": "^0.1.39",
    "swagger-cli": "^4.0.4",
    "typescript": "^4.6.3"
  }
}
